<h1>野球</h1>
<h3>新規投稿ページ</h3>
<%= form_for @tweet do |f| %>

# データ型がstringで自由記述の入力フォーム
  <div class="field">
    <%= f.label :項目名 %>
    <%= f.text_field :name, :size => 30 %>
  </div>

# データ型がtextで自由記述の入力フォーム
  <div class="field">
    <%= f.label :項目名  %>
    <%= f.text_area :about, :size => "30x2" %>
  </div>
 
  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", tweets_path %>